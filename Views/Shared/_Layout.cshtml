@using Bikes.RoleMembers
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Bikes</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	<link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
			@*fixed-top*@
			<a class="navbar-brand" asp-controller="Bike" asp-action="Index"><i class="fas fa-bicycle"></i></a>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav mr-auto">
					<li class="nav-item">
						<a class="nav-link" asp-controller="Bike" asp-action="Index">Home</a>
					</li>
					@if (User.IsInRole(Roles.Admin) || User.IsInRole(Roles.Executive))
					{
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								Masters
							</a>
							<div class="dropdown-menu" aria-labelledby="navbarDropdown">
								<a class="dropdown-item" asp-controller="Make" asp-action="Index">Makes</a>
								<a class="dropdown-item" asp-controller="Model" asp-action="Index">Models</a>
								<a class="dropdown-item" asp-controller="Bike" asp-action="Index">Bikes</a>
								@if (User.IsInRole(Roles.Admin))
								{
									<a class="dropdown-item" id="register" asp-area="Identity" asp-page="/Account/Register">Add User</a>
								}
							</div>
						</li>
					}
				</ul>
			</div>
			<partial name="_LoginPartial" />
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			<br /><br /><br />
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2020 - Bikes - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/lib/font-awesome/js/all.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
