@model int
<td class="text-right">
	<div class="btn-group" role="group">
		<a type="submit" class="btn btn-primary" asp-action="Edit" asp-route-id="@Model"><i class="far fa-edit"></i></a>
		<form action="Delete" method="post">
			<Button onclick="if (!confirm('Are you sure you want to delete this item')){ return false}" type="submit" class="btn btn-danger rounded-0" asp-action="Delete" asp-route-id="@Model" value="Delete"><i class="far fa-trash-alt"></i></Button>
		</form>
	</div>
</td>
